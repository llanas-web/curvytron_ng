{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictFunctionTypes": false,
    "importHelpers": true,
    "skipLibCheck": false,
    "target": "ESNext",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "lib": ["ESNext", "dom"],
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  }
}
